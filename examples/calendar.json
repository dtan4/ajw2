{
    "application": {
        "name": "sample",
        "css": [
            { "remote": false, "src": "fullcalendar.css" }
        ],
        "js": [
            { "remote": false, "src": "main.js" },
            { "remote": false, "src": "fullcalendar.js" }
        ]
    },
    "interface": {
        "type": "slim",
        "pretty": true,
        "elements": [
            {
                "type": "panel",
                "_isDisplay": true,
                "id": "calendar",
                "children": []
            }
        ]
    },
    "database": {
        "dbType": "sqlite",
        "tables": [
            {
                "name": "messages",
                "fields": [
                    {
                        "name": "message",
                        "type": "string",
                        "null": false
                    }
                ]
            }
        ]
    },
    "event": {
        "events": [
            {
                "id": "event01",
                "realtime": false,
                "trigger": {
                    "target": "submitBtn",
                    "type": "onClick",
                    "params": [
                        {
                            "id": "message",
                            "type": "string",
                            "value": {
                                "element": "messageTextBox",
                                "func": "getValue",
                                "type": "element"
                            }
                        }
                    ]
                },
                "action": {
                    "type": "always",
                    "actions": [
                        {
                            "id": "if01",
                            "type": "interface",
                            "element": "messageTableBody",
                            "func": "appendElements",
                            "params": [
                                {
                                    "tag": "tr",
                                    "children": [
                                        {
                                            "tag": "td",
                                            "text": {
                                                "type": "param",
                                                "id": "message"
                                            }
                                        }
                                    ]
                                }
                            ]
                        },
                        {
                            "id": "db01",
                            "type": "database",
                            "database": "messages",
                            "func": "create",
                            "where": [],
                            "fields": [
                                {
                                    "field": "message",
                                    "value":{
                                        "type": "param",
                                        "id": "message"
                                    }
                                }
                            ]
                        }
                    ]
                }
            }
        ]
    }
}
